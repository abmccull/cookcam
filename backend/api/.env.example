# Backend API Environment Configuration
# Copy this file to .env and fill in your values

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Database Configuration (for direct PostgreSQL access)
DATABASE_URL=postgresql://user:password@host:port/database

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# USDA API Configuration
USDA_API_KEY=your_usda_api_key

# Server Configuration
PORT=3000
NODE_ENV=development

# Demo Mode (set to false for production)
DEMO_MODE=false

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:8081

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Storage Configuration (Supabase Storage)
STORAGE_BUCKET_SCANS=scan-images
STORAGE_BUCKET_RECIPES=recipe-photos
STORAGE_BUCKET_PROFILES=profile-avatars

# Push Notifications (FCM/APNS)
FCM_SERVER_KEY=your_fcm_server_key
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apns_team_id

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=100

# Cache Configuration (Redis URL when available)
REDIS_URL=redis://localhost:6379

# AI/Image Processing
GOOGLE_VISION_API_KEY=your_google_vision_api_key
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=cookcam-images

# Stripe for Payments
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# In-App Purchase Configuration
# App Store (iOS)
APP_STORE_SHARED_SECRET=your_shared_secret_from_app_store_connect
APP_STORE_SANDBOX_VERIFY_URL=https://sandbox.itunes.apple.com/verifyReceipt
APP_STORE_PRODUCTION_VERIFY_URL=https://buy.itunes.apple.com/verifyReceipt

# Google Play (Android)
GOOGLE_PLAY_PACKAGE_NAME=com.cookcam
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your_project","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"..."}

# Subscription Configuration
SUBSCRIPTION_PRICE=3.99
SUBSCRIPTION_CURRENCY=USD
SUBSCRIPTION_TRIAL_DAYS=3

# Free Tier Limits
FREE_TIER_DAILY_SCANS=3
FREE_TIER_DAILY_RECIPES=1
FREE_TIER_MAX_SAVED_RECIPES=5 