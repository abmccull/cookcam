# CookCam API Environment Variables
# Copy this file to .env and fill in your values

# Node Environment
NODE_ENV=development
PORT=3000
APP_VERSION=1.0.0

# Database (Supabase)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
# Note: Backend checks both SUPABASE_SERVICE_KEY and SUPABASE_SERVICE_ROLE_KEY
SUPABASE_SERVICE_KEY=your-supabase-service-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-key

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_CONNECT_WEBHOOK_SECRET=whsec_your-connect-webhook-secret

# AWS (for S3 and CDN)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=cookcam-assets
CLOUDFRONT_DISTRIBUTION_ID=your-cloudfront-distribution-id
CLOUDFRONT_DOMAIN=cdn.cookcam.ai

# Email Service (SendGrid/Postmark/etc)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@cookcam.ai
EMAIL_FROM_NAME=CookCam

# Push Notifications
FCM_SERVER_KEY=your-firebase-cloud-messaging-key
APNS_KEY_ID=your-apple-push-notification-key-id
APNS_TEAM_ID=your-apple-team-id

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=info
STATSD_HOST=localhost
STATSD_PORT=8125

# Security
INTERNAL_API_KEY=your-internal-api-key-for-admin-endpoints
CORS_ORIGIN=http://localhost:8081
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Database Connection Pool
DB_POOL_MIN=5
DB_POOL_MAX=20

# External APIs
USDA_API_KEY=your-usda-food-database-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Analytics
MIXPANEL_TOKEN=your-mixpanel-token
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Social Login (OAuth)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
APPLE_CLIENT_ID=your-apple-signin-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key-base64

# Webhook URLs (for development)
WEBHOOK_BASE_URL=https://your-ngrok-url.ngrok.io

# Performance
ENABLE_CACHE=true
CACHE_TTL=3600
MAX_UPLOAD_SIZE=10mb

# Development Tools
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=false