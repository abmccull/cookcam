{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["react-native", "jest", "@testing-library/jest-native"],
    "jsx": "react"
  },
  "include": [
    "src/**/__tests__/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/__tests__/setup.ts"
  ]
}