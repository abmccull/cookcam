{
  "name": "cookcam",
  "version": "1.0.0",
  "description": "CookCam - AI-powered cooking companion mobile app",
  "scripts": {
    "mobile": "cd mobile/CookCam && npx @expo/cli start",
    "mobile:ios": "cd mobile/CookCam && npx @expo/cli start --ios",
    "mobile:android": "cd mobile/CookCam && npx @expo/cli start --android",
    "mobile:web": "cd mobile/CookCam && npx @expo/cli start --web",
    "mobile:tunnel": "cd mobile/CookCam && npx @expo/cli start --tunnel",
    "mobile:build:ios": "cd mobile/CookCam && npx eas build --platform ios",
    "mobile:build:android": "cd mobile/CookCam && npx eas build --platform android",
    "mobile:build:all": "cd mobile/CookCam && npx eas build --platform all",
    "mobile:submit:ios": "cd mobile/CookCam && npx eas submit --platform ios",
    "mobile:submit:android": "cd mobile/CookCam && npx eas submit --platform android",
    "mobile:update": "cd mobile/CookCam && npx eas update",
    "backend": "cd backend && npm start",
    "install:mobile": "cd mobile/CookCam && npm install",
    "install:backend": "cd backend && npm install",
    "install:all": "npm run install:mobile && npm run install:backend",
    "test:integration": "jest --config jest.config.integration.js",
    "test:integration:watch": "jest --config jest.config.integration.js --watch",
    "test:integration:coverage": "jest --config jest.config.integration.js --coverage",
    "test:e2e": "cd mobile/CookCam && detox test",
    "test:e2e:build": "cd mobile/CookCam && detox build",
    "test:all": "npm run test:backend && npm run test:mobile && npm run test:integration",
    "test:backend": "cd backend/api && npm test",
    "test:mobile": "cd mobile/CookCam && npm test",
    "db:test:setup": "ts-node test/integration/setup-db.ts",
    "db:test:teardown": "ts-node test/integration/teardown-db.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/cookcam.git"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@react-native/virtualized-lists": "^0.80.0",
    "@supabase/supabase-js": "^2.49.5-next.1",
    "dotenv": "^16.5.0",
    "react-native-svg": "^15.12.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "axios": "^1.6.5",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
